<div class="mb-3">
    {{ form_label(form.image) }}
    {{ form_widget(form.image, {'attr': {'class': 'form-control', 'placeholder': 'Image'}}) }}
    {{ form_errors(form.image, {'attr': {'class': 'text-danger'}}) }}
</div>

<button class="btn btn-success">{{ button_label|default('Save') }}</button>

{{ form_end(form) }}
