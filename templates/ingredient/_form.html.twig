{{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}

{% if form_errors(form) %}
    <div class="alert alert-danger">
        {{ form_errors(form) }}
    </div>
{% endif %}
<br>
<br>
<div class="card p-3" style="margin-left: -100px; max-width: 700px; position: relative;">
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                {{ form_label(form.Nom) }}
                {{ form_widget(form.Nom, {'attr': {'class': 'form-control ' ~ (form.Nom.vars.errors|length > 0 ? 'is-invalid' : '')}}) }}
                {{ form_errors(form.Nom, {'attr': {'class': 'text-danger'}}) }}
            </div>

            <div class="form-group">
                {{ form_label(form.categorieing) }}
                {{ form_widget(form.categorieing, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.categorieing) }}
            </div>

            <div class="form-group">
                {{ form_label(form.image) }}
                {{ form_widget(form.image, {'attr': {'class': 'form-control', 'placeholder': 'Image'}}) }}
                {{ form_errors(form.image, {'attr': {'class': 'text-danger'}}) }}
            </div>
        </div>

    </div>
    <button class="btn btn-success" style="position: absolute; bottom: 10px; right: 10px;">{{ button_label|default('Save') }}</button>
    <a href="{{ path('app_ingredient_index') }}" style="position: absolute; bottom: 10px; left: 10px;">back to list</a>
</div>

{{ form_end(form) }}
