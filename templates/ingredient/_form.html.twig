{{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}

{% if form_errors(form) %}
    <div class="alert alert-danger">
        {{ form_errors(form) }}
    </div>
{% endif %}

<div class="mb-3">
    {{ form_label(form.Nom) }}
    {{ form_widget(form.Nom, {'attr': {'class': 'form-control ' ~ (form.Nom.vars.errors|length > 0 ? 'is-invalid' : '')}}) }}
    {{ form_errors(form.Nom, {'attr': {'class': 'text-danger'}}) }}
</div>

