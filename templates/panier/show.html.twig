{% extends 'basef.html.twig' %}

{% block title %}Panier{% endblock %}

{% block body %}
    <h1>Panier</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ panier.id }}</td>
            </tr>
            <tr>
                <th>Date_ajout</th>
                <td>{{ panier.DateAjout ? panier.DateAjout|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Quantite</th>
                <td>{{ panier.quantite }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>
                {% for produit in panier.produits %}
            <div class="row mt-3">
                <div class="col-md-6">
                    <img src="{{ asset('img/' ~ produit.image) }}" alt="Image du produit">
                </div>
            </div>
        {% endfor %}
        </td>
        </tr>
         
        </tbody>
    </table>

    <a href="{{ path('app_panier_index') }}">back to list</a>

    <a href="{{ path('app_panier_edit', {'id': panier.id}) }}">edit</a>

    {{ include('panier/_delete_form.html.twig') }}
{% endblock %}
