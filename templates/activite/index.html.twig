{% extends 'base.html.twig'%}


{% block title %}Activite index{% endblock %}
{% block body %}
<style>
    .centered-div {
        width: 50%; /* Set the width of the div */
        margin: 0 auto; /* Set the top and bottom margin to 0, and the left and right margin to auto */
    }
</style>
<div class="centered-div">
    <h1>Activite index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                
                <th>Type</th>
                <th>Nom</th>
                <th>Description</th>
                <th>NbrCal</th>
                <th>Image</th>
                <th>Video</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for activite in activites %}
            <tr>
                <td>{{ activite.id }}</td>
                
                <td>{{ activite.type }}</td>
                <td>{{ activite.nom }}</td>
                <td>{{ activite.description }}</td>
                <td>{{ activite.nbrCal }}</td>
                <td><img src="{{ asset('/img/' ~ activite.image) }}" style="width: 50px"height="50px"></td>
                <td><video width="200" height="200" controls src="{{ asset('/vid/' ~ activite.video) }}" type="video/mp4"></video></td>
                <td>
                    <a href="{{ path('app_activite_show', {'id': activite.id}) }}">show</a>
                    <a href="{{ path('app_activite_edit', {'id': activite.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_activite_new') }}">Create new</a>

    <br><br><br><br><br><br><br><br><br><br><br><br><br><br>
</div>
{% endblock %}
