{% extends 'templates_front/baseFront.html.twig'%}


{% block title %}Activite index{% endblock %}
{% block body %}
    <h1>Activite index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                
                <th>Type</th>
                <th>Nom</th>
                <th>NbrCal</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for activite in activites %}
            <tr>
                <td>{{ activite.id }}</td>
                
                <td>{{ activite.type }}</td>
                <td>{{ activite.nom }}</td>
                <td>{{ activite.nbrCal }}</td>
                <td>
                    <a href="{{ path('app_activite_show', {'id': activite.id}) }}">show</a>
                    <a href="{{ path('app_activite_edit', {'id': activite.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_activite_new') }}">Create new</a>

    <br><br><br><br><br><br><br><br><br><br><br><br><br><br>
{% endblock %}
