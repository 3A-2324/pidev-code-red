{% extends 'base.html.twig'%}


{% block title %}Activite{% endblock %}

{% block body %}
<style>
    .centered-div {
        width: 50%; /* Set the width of the div */
        margin: 0 auto; /* Set the top and bottom margin to 0, and the left and right margin to auto */
    }
</style>
<div class="centered-div">
    <h1>Activite</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ activite.id }}</td>
            </tr>
            
            <tr>
                <th>Type</th>
                <td>{{ activite.type }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ activite.nom }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ activite.description }}</td>
            </tr>
             <tr>
                <th>NbrCal</th>
                <td>{{ activite.nbrCal }}</td>
            </tr>
             <tr>
                <th>Image</th>
                <td><img src="{{ asset('/img/' ~ activite.image) }}" style="width: 300px"height="300px"></td>
            </tr>
            <tr>
                <th>Video</th>
                <td><video width="400" height="400" controls src="{{ asset('/vid/' ~ activite.video) }}" type="video/mp4"></video></td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_activite_index') }}">back to list</a>

    <a href="{{ path('app_activite_edit', {'id': activite.id}) }}">edit</a>

    {{ include('activite/_delete_form.html.twig') }}
</div>
{% endblock %}
