{% extends './templates_front/baseFront.html.twig' %}

{% block title %}Journal index{% endblock %}


{% block body %}
    <h1>Journal index</h1>

   

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Date</th>
				<th>nb calories</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for journal in journals %}
                <tr>
                    <td>{{ journal.id }}</td>
                    <td>{{ journal.date ? journal.date|date('Y-m-d') : '' }}</td>
					<td>{{journal.getCaloriesJournal()}}</td>

                    <td>
                        <a href="{{ path('app_journal_show', {'id': journal.id}) }}">Show</a>
                        <a href="{{ path('app_journal_edit', {'id': journal.id}) }}">Edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">No records found</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_journal_new') }}">Create new</a>

    
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
		<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/js/bootstrap-datepicker.min.js"></script>
		<script>
			// Ensure jQuery is loaded
if (typeof jQuery == 'undefined') {
console.error('jQuery is not loaded!');
} else {
console.log('jQuery is loaded!');
}

// Initialize Bootstrap Datepicker
$('.datepicker').datepicker({format: 'yyyy-mm-dd'});
		</script>

{% endblock %}
