{% extends './templates_front/baseFront.html.twig' %}

{% block title %}Journal
{% endblock %}

{% block body %}
	<h1>Journal</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ journal.id }}</td>
			</tr>
	
			<tr>
				<th>Date</th>
				<td>{{ journal.date ? journal.date|date('Y-m-d') : '' }}</td>
			</tr>
			<tr>
				<th>Recette(s)</th>
				<td>
					<ul>
						{% for recette in journal.recetteRef %}
							<li>{{ recette.nom }}</li>
						{% endfor %}
					</ul>
				</td>
			</tr>
		</tbody>
	</table>

	<a href="{{ path('app_journal_index') }}">Back to list</a>
	<a href="{{ path('app_journal_edit', {'id': journal.id}) }}">Edit</a>
	{{ include('journal/_delete_form.html.twig') }}
{% endblock %}
