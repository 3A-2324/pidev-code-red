{% extends 'base.html.twig' %}
{% block body %}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Modifier Suivi</title>
    <style>
         footer {
    position: fixed;
    left: 0;
    bottom: 0;
    width: 100%;
    background-color: #f4f4f4 /* Change the background color as needed */
    color: #fff; /* Change the text color as needed */
    text-align: center;
    padding: 10px 0; /* Adjust padding as needed */
}

        h1 {
            text-align: center;
            margin-top: 20px;
        }

        form {
            max-width: 500px;
            margin-top: 100px;
            margin-left: 600px;
            padding: 20px;
            background-color: #fff;
            border-radius: 5px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }

        label {
            display: block;
            margin-bottom: 5px;
        }

        input[type="text"],
        select {
            width: 100%;
            padding: 8px;
            margin-bottom: 10px;
            border: 1px solid #ccc;
            border-radius: 3px;
            box-sizing: border-box;
        }

        button {
            display: block;
            width: 100%;
            padding: 10px;
            background-color: #007bff;
            color: #fff;
            border: none;
            border-radius: 3px;
            cursor: pointer;
        }

        button:hover {
            background-color: #0056b3;
        }
    </style>
</head>
<body>
    <h1>Modifier Suivi</h1>

    <form method="post" action="{{ path('ajouterrr') }}">
        {{ form_widget(myForm._token) }}

        {{ form_errors(myForm) }}

        <div>
            {{ form_label(myForm.date_suivi) }}
            {{ form_errors(myForm.date_suivi) }}
            {{ form_widget(myForm.date_suivi) }}
        </div>

        <div>
            {{ form_label(myForm.nouveau_poids) }}
            {{ form_errors(myForm.nouveau_poids) }}
            {{ form_widget(myForm.nouveau_poids) }}
        </div>

        <div>
            {{ form_label(myForm.id_objectif) }}
            {{ form_errors(myForm.id_objectif) }}
            <select id="{{ myForm.id_objectif.vars.id }}" name="{{ myForm.id_objectif.vars.full_name }}">
                {% for objectif in objectifs %}
                    <option value="{{ objectif.id }}">{{ objectif.id }}</option>
                {% endfor %}
            </select>
        </div>

        <div>
            <button type="submit">modifier Suivi</button>
        </div>
    </form>
</body>
</html>
{% endblock %}
