{% extends './templates_back/base.html.twig' %}

{% block title %}Recette{% endblock %}

{% block body %}
    <div class="container mt-5">

		<div class="row justify-content-end mt-4">
        <div class="col-auto mr-2" >
            <a href="{{ path('app_recette_edit', {'id': recette.id}) }}" class="btn btn-primary">Edit</a>
        </div>
        <div class="col-auto" style="margin-right: 170px;">
            {{ include('recette/_delete_form.html.twig') }}
        </div>
    </div>
        <h1 class="mb-4">{{ recette.Nom }}</h1>
	
        <div class="row">
            <div class="col-md-6">
                <div class="card"style="margin-right: 10px;">
                    <div class="card-body">
                        <p class="card-text"><strong>Categorie:</strong> {{ recette.Categorie }}</p>
                        <p class="card-text"><strong>Description:</strong> {{ recette.description }}</p>
                        <p class="card-text"><strong>Calorie Recette:</strong> {{ recette.calorieRecette }}</p>
                        <h6 class="card-subtitle mb-2 text-muted">Ingredients:</h6>
                        <ul class="list-group">
                            {% for ingredient in recette.getIngredients() %}
                                <li class="list-group-item">{{ ingredient.getNom() }}</li>
                            {% endfor %}
                        </ul>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card" style="margin-left: 10px; width: 300px; height: 200px;">
                    <img src="{{ asset('img/' ~ recette.image) }}" class="card-img-top" alt="{{ recette.Nom }}">
                </div>
            </div>
        </div>

        <div class="mt-4">
            <a href="{{ path('app_recette_index') }}" class="btn btn-secondary">Back to List</a>
        </div>
    </div>
{% endblock %}
