{% extends 'basef.html.twig' %}

{% block title %}
    Produit
{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="my-4">Détails du Produit</h1>

        <div class="row">
            <div class="col-md-6">
                <table class="table table-striped">
                    <tbody>
                        <tr>
                            <th scope="row">ID</th>
                            <td>{{ produit.id }}</td>
                        </tr>
                        <tr>
                            <th scope="row">Nom du Produit</th>
                            <td>{{ produit.NomProduit }}</td>
                        </tr>
                        <tr>
                            <th scope="row">Description</th>
                            <td>{{ produit.Description }}</td>
                        </tr>
                        <tr>
                            <th scope="row">Prix</th>
                            <td>{{ produit.Prix }} DT</td>
                        </tr>
                        
                    </tbody>
                </table>

                <a href="{{ path('app_produit_indexf') }}" class="btn btn-secondary">Retour à la liste</a>
            </div>
            <div class="col-md-6">
                <img src="{{ asset('img/' ~ produit.image) }}" alt="Product Image" class="img-fluid">
            </div>
        </div>
    </div>
{% endblock %}

